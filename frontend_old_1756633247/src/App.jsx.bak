import React from "react";
import { Routes, Route, Link } from "react-router-dom";
import Home from "./pages/Home";
import Experiments from "./pages/Experiments";

export default function App() {
  return (
    <BrowserRouter>
      <SiteFrame>
        <Routes>
          <Route path="/" element={<Home />} />
          <Route path="/experiments" element={<Experiments />} />
        </Routes>
      </SiteFrame>
    </BrowserRouter>
  );
}

function SiteFrame({ children }) {
  return (
    <div style={{ minHeight: "100dvh", background: "#f8fafc", color: "#0f172a" }}>
      <Header />
      <main style={{ maxWidth: 1080, margin: "0 auto", padding: "24px 16px" }}>
        {children}
      </main>
      <Footer />
    </div>
  );
}

function Header() {
  return (
    <header style={{ background: "#ffffff", borderBottom: "1px solid #e5e7eb" }}>
      <div style={{ maxWidth: 1080, margin: "0 auto", padding: "12px 16px", display: "flex", alignItems: "center", gap: 16 }}>
        <Logo />
        <nav style={{ marginLeft: "auto", display: "flex", gap: 12 }}>
          <NavLink to="/">Home</NavLink>
          <NavLink to="/experiments">Experiments</NavLink>
          <a style={btnSecondary} href="https://example.com/docs" rel="noreferrer">Docs</a>
          <a style={btnPrimary} href="#get-started">Get Started</a>
        </nav>
      </div>
    </header>
  );
}

function NavLink({ to, children }) {
  return (
    <Link to={to} style={{ textDecoration: "none", color: "#0f172a", padding: "6px 8px", borderRadius: 8 }}>
      {children}
    </Link>
  );
}

function Footer() {
  return (
    <footer style={{ marginTop: 48, borderTop: "1px solid #e5e7eb", background: "#ffffff" }}>
      <div style={{ maxWidth: 1080, margin: "0 auto", padding: "24px 16px", display: "grid", gap: 12 }}>
        <div style={{ display: "flex", alignItems: "center", gap: 12 }}>
          <Logo size={18} />
          <strong>AIX Aleph</strong>
        </div>
        <div style={{ color: "#475569", fontSize: 14 }}>
          © {new Date().getFullYear()} AIX Aleph. All rights reserved.
        </div>
      </div>
    </footer>
  );
}

function Logo({ size = 22 }) {
  // Smart “A” glyph, simple + memorable
  return (
    <div style={{ display: "flex", alignItems: "center", gap: 8 }}>
      <div
        aria-hidden
        style={{
          width: size, height: size, borderRadius: 6,
          background: "linear-gradient(135deg, #111827 0%, #0ea5e9 100%)",
          display: "grid", placeItems: "center",
        }}
      >
        <span style={{ color: "#fff", fontWeight: 900, fontSize: size * 0.7, lineHeight: 1 }}>A</span>
      </div>
      <span style={{ fontWeight: 800, color: "#0f172a" }}>Aleph</span>
    </div>
  );
}

const btnPrimary = {
  padding: "8px 12px",
  borderRadius: 10,
  border: "1px solid #0f172a",
  background: "#0f172a",
  color: "#fff",
  textDecoration: "none",
};

const btnSecondary = {
  padding: "8px 12px",
  borderRadius: 10,
  border: "1px solid #cbd5e1",
  background: "#ffffff",
  color: "#0f172a",
  textDecoration: "none",
};
