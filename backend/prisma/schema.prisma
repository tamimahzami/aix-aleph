// prisma/schema.prisma  — FINAL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") // z.B. file:./prisma/dev.db
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Backrelations
  telemetry   Telemetry[]
  predictions Prediction[]
}

model Telemetry {
  id         Int       @id @default(autoincrement())
  timestamp  DateTime  @default(now())
  soc        Float?
  powerKW    Float?
  speed      Float?
  tempC      Float?
  odometerKm Float?
  meta       Json?

  // Optionale weiche Verknüpfung per E-Mail
  userEmail String?
  user      User?     @relation(fields: [userEmail], references: [email], onDelete: SetNull, onUpdate: Cascade)

  @@index([timestamp])
  @@index([userEmail])
}

model Prediction {
  id         Int       @id @default(autoincrement())
  createdAt  DateTime  @default(now())
  model      String?
  input      Json?
  output     Json?

  // Optionale weiche Verknüpfung per E-Mail
  userEmail String?
  user      User?     @relation(fields: [userEmail], references: [email], onDelete: Cascade, onUpdate: Cascade)

  @@index([createdAt])
  @@index([userEmail])
}

model Experiment {
  id          Int       @id @default(autoincrement())
  slug        String    @unique
  title       String
  description String?
  status      String    @default("draft") // draft | running | done | failed
  config      Json?
  result      Json?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([status])
  @@index([updatedAt])
}
