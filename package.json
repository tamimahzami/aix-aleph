{
  "name": "aix-aleph-monorepo",
  "private": true,
  "engines": {
    "node": ">=18.18",
    "npm": ">=9"
  },
  "scripts": {
    "dev": "npm run clean && concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run start --prefix backend",
    "dev:frontend": "npm run start --prefix frontend",
    "build": "npm run build --prefix frontend",
    "preview": "npm run preview --prefix frontend",
    "serve": "npm run build --prefix frontend && serve -s frontend/dist -l 5001",
    "clean": "npm run kill:ports",
    "kill:ports": "kill-port 5001 5173",
    "docker:up": "docker compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker compose -f docker-compose.prod.yml down"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "kill-port": "^2.0.1",
    "nodemon": "^3.1.10",
    "serve": "^14.2.4"
  }
}
